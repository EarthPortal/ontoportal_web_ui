= render_in_modal do
  :javascript
    function confirmSubmission() {
      document.getElementById('ontologyForm').submit();
    }

  .modal-header{ style: "display: flex; flex-direction: column; align-items: center; position: relative;" }
    %button.close{ style: "position: absolute; top: 10px; right: 10px;", data: { dismiss: 'modal' }, aria: { label: 'Close' } }
      %span{ aria: { hidden: 'true' } } &times;
    %svg{ xmlns: "http://www.w3.org/2000/svg", viewBox: "0 0 20 20", fill: "currentColor", class: "mr-3 h-5 w-5 flex-shrink-0 st-current", width: "30", height: "30" }
      %path{ "fill-rule": "evenodd", d: "M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z", "clip-rule": "evenodd" }

    %h5.modal-title
      = t('ontologies.confirm_submission_title')

  .modal-body
    = render_alerts_container
    %p
      = t('ontologies.confirm_submission_message')

  .modal-footer
    = button_tag t('concepts.cancel'), class: 'btn btn-secondary', data: { dismiss: 'modal' }
    = button_tag t('concepts.confirm'), class: 'btn btn-primary', onclick: 'confirmSubmission()'